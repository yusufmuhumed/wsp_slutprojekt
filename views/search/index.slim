
body class="search-result-container"

  section  class="above-cards"
      div class="text-box-cards"
          h2 search results 




  - if results.empty?
    p No results found
  - else
    div class="search-results"
      - results.each do |result|
            div class="characters-container"
              div class="char-img-box"
                  img class="char-img" src="/img/one_piece_images/#{result['name']}.jpg"  

              li class="list_character"
                  div class="name-container"
                      a href="/search/#{result["name"]}" #{result["name"]} 



              


